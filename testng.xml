<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite">
    <listeners>
        <listener class-name="org.InarAcademy.listeners.ExtentReportListener"/>
    </listeners>

    <test verbose="2" preserve-order="true" name="InarAcademyTestNG">
        <classes>
            <class name="org.InarAcademy.testSuites.LoginTest">
                <methods>
                    <include name="loginToWebOrder"/>
                </methods>
            </class>

            <class name="org.InarAcademy.testSuites.order.VerifyCalculationTest">
                <methods>
                    <include name="calculateOrder"/>
                </methods>
            </class>

            <class name="org.InarAcademy.testSuites.viewAllOrders.ViewOrderTest">
                <methods>
                    <include name="placeAndCheckOrder"/>
                </methods>
            </class>
            <class name="org.InarAcademy.testSuites.viewAllOrders.CheckBoxTest">
                <methods>
                    <include name="addAndDeleteData"/>
                </methods>
            </class>
            <class name="org.InarAcademy.testSuites.order.InvalidCardNumberTests">
                <methods>
                    <include name="invalidCardNumberForAmericanExpress"/>
                    <include name="invalidCardNumberForVisa"/>
                    <include name="invalidCardNumberForMasterCard"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>